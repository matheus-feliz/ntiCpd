<%-include('./include/head')%>
    <style>
        /*listagem*/
        :root {
            --light-gray: #EEEEEE;
            --azul: rgb(0, 0, 170);
        }

        .text-center {
            position: absolute;
            margin-left: 200px;
            margin-top: 50px;
            font-family: sans-serif;
            font-size: 30px;
        }

        .traco-busca {
            border: 1px solid;
            width: 85%;
            position: absolute;
            margin-left: 170px;
            margin-top: 85px;
            font-family: sans-serif;
            font-size: 30px;
            opacity: 0.3;
        }

        .form-busca {
            position: absolute;
            margin-left: 70%;
            margin-top: 30px;
            font-family: sans-serif;
            font-size: 30px;
        }

        .form-busca input {
            font-family: sans-serif;
            border: none;
            border-radius: 5px 0px 0px 5px;
            padding: 15px 20px;
            width: 100%;
            outline: none;
            margin-right: 0px;
            margin-top: 5px;
        }

        .form-busca input:focus {
            box-shadow: 0 0 0.5em green;
            transition: all 300ms ease-in-out;
        }

        .resultado {
            position: absolute;
            margin-left: 70%;
            margin-top: 90px;
            font-family: sans-serif;
            font-size: 25px;
            padding: 20px;
            display: flex;
            flex-direction: row;
            flex-wrap: wrap;
            gap: 0px;
            flex: 1 1 320px;
            margin: 10px;
        }

        .resultado p {
            margin-right: 20px;
            border-right: 1px solid black;
            padding-right: 5px;
        }

        .box {
            width: 100%;
            display: flex;
        }

        .ajust {
            margin-left: 30%;
            z-index: 2;
            position: absolute;
            padding: 0px;
            margin-top: 5%;
            width: 70%;
        }

        .resultado:nth-child(4) {
            grid-column: span 2;
        }

        .img-button {
            width: 30px;
            height: 30px;
        }

        table {
            margin-bottom: 50px;
        }

        .button {
            width: 60px;
            height: 45px;
            background-color: green;
            padding: 0px;
            border-radius: 0px 5px 5px 0px;
            border: none;
            margin-left: 90%;
            transition: all 300ms ease-in-out;
            margin-top: -45px;
        }

        .edit {
            width: 45px;
            height: 40px;
            background-color: green;
            padding: 0px;
            border-radius: 5px;
            border: none;
            margin-left: 2%;
            transition: all 300ms ease-in-out;
            margin-top: 20px;
        }

        .cadastra {
            width: 45px;
            height: 40px;
            background-color: var(--azul);
            padding-right: 1px;
            border-radius: 5px;
            border: none;
            margin-left: 2%;
            transition: all 300ms ease-in-out;
            margin-top: 20px;
        }

        .listagem {
            width: 45px;
            height: 40px;
            background-color: green;
            padding: 0px;
            border-radius: 5px;
            border: none;
            margin-left: 2%;
            transition: all 300ms ease-in-out;
            margin-top: 20px;
        }

        .adicionar {
            width: 500px;
            height: 60px;
            font-size: 30px;
            font-family: sans-serif;
            background-color: var(--azul);
            padding: 0px;
            border-radius: 5px;
            border: none;
            transition: all 300ms ease-in-out;
            margin-left: 20%;
            margin-top: 20%;
            color: white;
            z-index: 2;
        }

        .adicionar a {
            color: white;
            text-decoration: none;
        }

        .button-img {
            width: 30px;
            height: 30px;
            padding: 0px;
        }

        .adicionar:hover,
        .cadastra:hover {
            background-color: blue;
            transition: all 300ms ease-in-out;
        }

        .edit:hover,
        .button:hover,
        .listagem:hover {
            background-color: rgb(0, 170, 0);
            transition: all 300ms ease-in-out;
        }

        .reponsavel p {
            margin-top: 2%;
            margin-bottom: 5%;
            border-bottom: 2px solid rgba(0, 0, 0, 0.3);
            padding-bottom: 10px;
            width: 80%;
        }

     
        .titulo {
            font-family: sans-serif;
        }

        .traco {
            width: 90%;
            margin: 0px 5% 10px 5%;
            border: 1px solid;
            opacity: 0.3;
        }

        .img-div {
            padding-bottom: 10px;
            padding-right: 10px;
            display: flex;
        }

        .img-div p {
            margin-left: 2%;
            font-family: sans-serif;
            font-size: 20px;
        }

        .img {
            width: 40px;
            height: 40px;
            margin-top: 15px;
            margin-left: 10px;
        }


        @media(min-width:1366px) {
            .impressao {
                width: 70%;
                height: 95%;
            }
        }

        @media(min-width:700px) and (max-width:799px) {
            .form-busca {
                margin-left: 50%;
            }

            .text-center {
                margin-left: 170px;
                font-size: 22px;
            }

            .resultado {
                margin-left: 3%;
                margin-top: 40px;
                flex: 1 1 150px;
                padding: 0;
            }

            .resultado p {
                margin-right: 10px;
            }

            .edit {
                margin-left: 1%;
            }

            .cadastra {
                margin-left: 1%;
            }

            .listagem {
                margin-left: 1%;
            }

            .adicionar {
                width: 250px;
                margin-left: 50%;
            }

            .traco {
                width: 70%;
            }
        }

        @media(min-width:900px) and (max-width:998px) {
            .form-busca {
                margin-left: 60%;
            }

            .text-center {
                margin-left: 180px;
                font-size: 25px;
            }

            .resultado {
                margin-left: 3%;
                margin-top: 40px;
                flex: 1 1 150px;
                padding: 0;
            }

            .resultado p {
                margin-right: 15px;
            }

            .edit {
                width: 25px;
                height: 20px;
                margin-left: 2%;
            }

            .cadastra {
                width: 25px;
                height: 20px;
                margin-left: 2%;
            }

            .listagem {
                width: 25px;
                height: 20px;
                margin-left: 2%;
            }

            .adicionar {
                width: 250px;
                margin-left: 60%;
            }

            .traco {
                width: 75%;
            }
        }

        @media(min-width:300px) and (max-width:699px) {
            .form-busca {
                margin-left: 140%;
            }

            .form-busca input {
                margin-top: 12px;
                height: 10px;
            }

            .form-busca input::placeholder {
                font-size: 5px;
            }

            .text-center {
                margin-left: 170px;
                font-size: 18px;
                width: 150%;
            }

            .button {
                width: 30px;
                height: 30px;
                margin-left: 100%;
                margin-top: -30px;
            }

            .resultado {
                margin-left: 50%;
                margin-top: 70px;
                flex: 1 1 150px;
                padding: 0;
            }

            .resultado p {
                font-size: 20px;
                margin-right: 10px;
            }

            .img-button {
                width: 20px;
                height: 19px;
            }

            .edit {
                margin-left: 1%;
            }

            .cadastra {
                margin-left: 1%;
            }

            .listagem {
                margin-left: 1%;
            }

            .adicionar {
                width: 250px;
                margin-left: 30%;
            }

            .traco-busca {
                width: 130%;
            }

            .traco {
                width: 90%;
            }

            .impressao {
                background-color: white;
                border: none;
                box-shadow: 0 0 0.5em black;
                display: none;
                margin: 30px 0px 0px 50%;
                width: 120%;
                height: 140%;
                background-color: white;
                padding-top: 0px;
                align-items: center;
                position: absolute;
                transition: all 300ms ease-in-out;
            }

            .button-imprimir {
                width: 250px;
                height: 50px;
            }

            .close {
                margin-left: 90%;
                line-height: 5px;
                font-size: 40px;
                cursor: pointer;
                opacity: 0.3;
                z-index: 2;
                position: absolute;
            }
        }

        @media(min-width:800px) and (max-width:899px) {}

    </style>
    <section>
        <%-include('./include/navBar')%>
                <h1 class="text-center ">
                    Tombo: <%=equipamento.tombo%>       
                </h1>
                <div>
                    <form class="form-busca">
                        <input type="text" name="busca" id="busca" placeholder="busca pelo tombo">
                        <button class="button" type="submit"><img class="img-button"
                                src="./img/pesquisa.svg"></button>
                    </form>
                </div>
                <div class="traco-busca"></div>
                <div class="ajust">
                    <%-include('include/messages');%>
                    <%if(servicos.length>0){%>
                        <div class="resultado">
                            <div class="box">
                                <table>
                                    
                                        <tbody>
                                            <%servicos.forEach(servico=>{%>
                                            <tr>
                                                <td>
                                                    <p>
                                                        <%=servico.tombo%>
                                                    </p>
                                                </td>
                                                <td>
                                                    <p>
                                                        <%=servico.dataInicial%>
                                                    </p>
                                                </td>
                                                <td>
                                                    <p>
                                                        <%=servico.dataFinal%>
                                                    </p>
                                                </td>
                                                <td>
                                                    <div class="box">
                                                        <button class="cadastra"><a href="/listagemcomputador/delete/<%=servico.id%>"><img class="button-img"
                                                            src="./img/delete.png"></a></button>
                                                        <button class="edit"><a
                                                                href="/cadastrodeequipamento/edit/<%=servico.id%>"><img class="button-img"
                                                                    src="./img/escrever.svg"></a></button>
                                                        <button class="cadastra"><a href="/impressao/<%=servico.id%>"><img class="button-img"
                                                            src="./img/impressora.svg"></a></button>
                                                    </div>
                                                </td>
                                            </tr>
                                            <%})%>
                                        </tbody>                                        
                                            <tfoot>
                                                <tr>
                                                    <%}else{%>
                                                <tr>
                                                    <td>
                                                        <p class="text-center"> Não existe equipamento cadastrado</p>
                                                    </td>
                                                <tr>
                                                    <%}%>

                                                        <td>
                                                            <div class="box">
                                                                      <a href="/cadastrodeequipamento/<%=equipamento.id%>"><button
                                                                        class="adicionar"> +Nova
                                                                        ordem</button></a>
                                                                                                                                       
                                                            </div>
                                                        </td>
                                                </tr>
                                            </tfoot>
                                </table>

                            </div>

                        </div>
                </div>

                </div>
    </section>
    <%-include('./include/barraLateral')%>

        <%-include('./include/footer')%>