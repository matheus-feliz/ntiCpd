<%-include('./include/head')%>
   <style>
    :root {
    --light-gray: #EEEEEE;
}

.text-center {
    z-index: 2;
    position: absolute;
    margin-left: 30%;
    margin-top: 25px;
    font-family: sans-serif;
    font-size: 30px;
}

.folha {
    width: 80%;
    height: 92%;
    background-color: white;
    margin-left: 13%;
    margin-top: 30px;
    position: absolute;
    z-index: 2;
    display: flex;
    justify-items: center;
    padding: 0px;
}

.grid-form {
    margin-left: 50px;
    margin-top: 80px;
    position: absolute;
    z-index: 2;
}

.grid-form .form-contact {
    border: none;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    gap: 10px;
}

.form-group {
    flex: 1 1 320px;
    margin: 3px;
}

.form-espaco {
    width: 100%;
    background-color: white;
}

.label-form {
    display: block;
    cursor: pointer;
    margin-bottom: 5px;
    font-family: sans-serif;
}

.form-group .input-form {
    font-family: sans-serif;
    border: none;
    padding: 8px 10px;
    width: 100%;
    outline: none;
    margin-right: 0px;
    background-color: #F0F2F5;
}

.form-group textarea {
    font-family: sans-serif;
    border: none;
    padding: 5px 10px;
    width: 100%;
    outline: none;
    margin-right: 0px;
    background-color: #F0F2F5;
}

.input-form:focus {
    box-shadow: 0 0 0.5em green;
}

.group-form .input-form::placeholder,
.group-form textarea::placeholder {
    font-family: sans-serif;
    color: var(--light-gray);
}

.button {
    width: 60px;
    height: 40px;
    background-color: green;
    padding: 0px;
    border-radius: 5px;
    border: none;
    margin-left: 90%;
}

.button-img {
    width: 50px;
    height: 30px;
    padding: 0px;
}

.button:hover {
    background-color: rgb(0, 170, 0);
    transition: all 300ms ease-in-out;
}

@media(min-width:300px) and (max-width:699px) {
    .form-group {
        flex: 1 1 250px;
        margin: 3px;
    }
    .folha {
        width: 550px;
        height: 100%;
        padding-bottom: 0px;
        background-color: white;
        margin-left: 200px;
        margin-top: 30px;
        margin-bottom: 0px;
        position: absolute;
        z-index: 2;
        display: flex;
        justify-items: center;
        padding: 0px;
    }
    .button {
        width: 60px;
        height: 40px;
        background-color: green;
        padding: 0px;
        border-radius: 5px;
        border: none;
        margin-left: 80%;
    }
}
   </style>
    <section>
        <%-include('./include/navBar')%>
        <%-include('include/messages');%>
            <div class="folha">
                <h1 class="text-center "> Cadastro de serviços de equipamento
                </h1>
                <div class="grid-form">
                    <form action="/registro/edit/servico/<%=servico.id%>" method="POST">
                        <fieldset class="form-contact">
                            <div class="form-group">
                                <label class="label-form" for="telefone">Telefone</label>
                                <input class="input-form" id="telefone" name="telefone" type="tel" placeholder="(77) 3333-3333" value="<%=servico.telefone%>">
                            </div>
                            <div class="form-group">
                                <label class="label-form" for="unidade">Unidade</label>
                                <input class="input-form" id="unidade" name="unidade" type="text" placeholder="nome da unidade" value="<%=servico.unidade%>">
                            </div>
                            <div class="form-group">
                                <label class="label-form" for="responsavel">Responsável</label>
                                <input class="input-form" id="responsavel" name="responsavel" type="text" placeholder="nome do Responsável" value="<%=servico.responsavel%>">
                            </div>
                            <div class="form-group">
                                <label class="label-form" for="tombo">Tombo</label>
                                <input class="input-form" id="tombo" name="tombo" type="text" placeholder="13545357" value="<%=servico.tombo%>">
                            </div>
                            <div class="form-group">
                                <label class="label-form" for="tipo">Tipo de serviço</label>
                                <input class="input-form" id="tipo" name="tipo" type="text" value="<%=servico.tipo%>" placeholder="serviço no equipamento">
                            </div>

                            <div class="form-group">
                                <label class="label-form" for="backup">Backup</label>
                                <input class="input-form" id="backup" name="backup" type="text"  value="<%=servico.backup%>" placeholder="backup feito sim ou não">
                            </div>
                            <div class="form-group">
                                <label class="label-form" for="data-inicial">data de entrada</label>
                                <input class="input-form" id="data-inicial" name="dataInicial" value="<%=servico.dataInicial%>" type="date">
                            </div>
                            <div class="form-group">
                                <label class="label-form" for="data-final">data de saida</label>
                                <input class="input-form" id="data-final" name="dataFinal"  value="<%=servico.dataFinal%>"type="date">
                            </div>
                            <div class="form-group">
                                <label class="label-form" for="solucao">Solução(opcional)</label>
                                <input class="input-form" id="solucao" name="solucao" type="text" value="<%=servico.solucao%>" placeholder="solução">
                            </div>
                            <div class="form-espaco">

                            </div>

                            <div class="form-group">
                                <label class="label-form" for="observacao">Observação</label>
                                <textarea class="input-form" id="observacao" name="observacao" value="<%=servico.observacao%>" cols="30" rows="10"> </textarea>
                            </div>


                            <button class="button" type="submit"><img class="button-img"  src="./img/salvar.svg"></button>
                        </fieldset>
                    </form>

                </div>
            </div>
            <%-include('./include/barraLateral')%>
    </section>

    <%-include('./include/footer')%>